            a {text-decoration: none; color: red;}
        </style>
    </head>

    <body>
        <div class="container">
            <h1>Ma todolist</h1>

            <ul>
            <% todolist.forEach(function(todo, index) { %>
                <li> <%= todo %> <a href="/todo/supprimer/<%= index %>"> âœ˜ </a> </li>
            <% }); %>
            </ul>

